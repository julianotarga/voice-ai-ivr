# =============================================================================
# Voice AI Baremetal - Environment Variables
# =============================================================================
# Para rodar co-residente com FreeSWITCH no mesmo servidor
#
# Copie para: /opt/voice-ai/.env
# =============================================================================

# =============================================================================
# Geral
# =============================================================================
TZ=America/Sao_Paulo
DEBUG=false

# =============================================================================
# Voice AI Service (porta 8100)
# =============================================================================
HOST=0.0.0.0
PORT=8100

# =============================================================================
# Voice AI Realtime (portas 8085, 8086, 8022)
# =============================================================================
AUDIO_MODE=websocket

# WebSocket Mode (mod_audio_stream)
REALTIME_HOST=0.0.0.0
REALTIME_PORT=8085

# B-leg Stream (Announced Transfer)
REALTIME_BLEG_STREAM_PORT=8086
REALTIME_BLEG_STREAM_HOST=127.0.0.1

# ESL Outbound
ESL_SERVER_HOST=0.0.0.0
ESL_SERVER_PORT=8022

# =============================================================================
# FreeSWITCH ESL - LOCALHOST (mesmo servidor)
# =============================================================================
# CRÍTICO: Usar 127.0.0.1 pois FreeSWITCH está no mesmo servidor
ESL_HOST=127.0.0.1
ESL_PORT=8021
ESL_PASSWORD=ClueCon

# =============================================================================
# Database - FusionPBX PostgreSQL (mesmo servidor)
# =============================================================================
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=fusionpbx
DB_USER=fusionpbx
DB_PASS=CHANGE_ME_FUSIONPBX_PASSWORD

# =============================================================================
# Redis - Servidor Docker (AJUSTAR IP)
# =============================================================================
# Se Redis está em outro servidor/Docker, colocar o IP real
REDIS_HOST=192.168.1.10
REDIS_PORT=6379

# =============================================================================
# OmniPlay Backend - URL PÚBLICA
# =============================================================================
# Backend continua em Docker, usar URL pública
OMNIPLAY_API_URL=https://api.exemplo.com.br
VOICE_AI_SERVICE_TOKEN=CHANGE_ME_TOKEN
OMNIPLAY_WEBHOOK_URL=https://api.exemplo.com.br/webhook/voice

# =============================================================================
# AI Providers (Chaves de API)
# =============================================================================
OPENAI_API_KEY=sk-CHANGE_ME
ELEVENLABS_API_KEY=
GOOGLE_API_KEY=

# =============================================================================
# Transfer Configuration
# =============================================================================
TRANSFER_DEFAULT_TIMEOUT=30
TRANSFER_ANNOUNCE_ENABLED=true
TRANSFER_MUSIC_ON_HOLD=local_stream://moh

# =============================================================================
# Session Limits
# =============================================================================
MAX_SESSIONS_PER_DOMAIN=10
SESSION_IDLE_TIMEOUT_SECONDS=30
SESSION_MAX_DURATION_SECONDS=600

# =============================================================================
# Recording
# =============================================================================
ATTACH_RECORDING_ENABLED=true
FREESWITCH_RECORDINGS_PATH=/var/lib/freeswitch/recordings

# =============================================================================
# Time Zone
# =============================================================================
DEFAULT_TIMEZONE=America/Sao_Paulo

# =============================================================================
# Development (deixar vazio em produção)
# =============================================================================
# DEV_TEST_NUMBER=5518999999999
